groups:
  - name: blackbox_alerts
    rules:
      - alert: BlackboxProbeFailed
        expr: probe_success == 0
        for: 2m
        labels:
          severity: critical
        annotations:
          summary: "Probe failure for {{ $labels.instance }}"
          description: "The Blackbox probe for {{ $labels.instance }} has failed for over 2 minutes."
