{
    "title": "API Gateway Health Monitoring",
    "panels": [
      {
        "title": "Probe Success",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "probe_success{instance=\"http://tyk-gateway:8080/hello\"}",
            "instant": true
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "auto",
          "textMode": "auto",
          "valueOptions": {
            "prefix": "",
            "suffix": "",
            "decimals": 0
          },
          "thresholds": {
            "steps": [
              { "value": 0, "color": "red" },
              { "value": 1, "color": "green" }
            ]
          }
        }
      },
      {
        "title": "Response Time",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "probe_duration_seconds{instance=\"http://tyk-gateway:8080/hello\"}",
            "legendFormat": "Duration"
          }
        ],
        "options": {
          "tooltip": {
            "mode": "single"
          }
        }
      },
      {
        "title": "SSL Certificate Expiry",
        "type": "gauge",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "(probe_ssl_earliest_cert_expiry{instance=\"http://tyk-gateway:8080/hello\"} - time()) / 86400",
            "instant": true
          }
        ],
        "options": {
          "thresholds": {
            "steps": [
              { "value": 0, "color": "red" },
              { "value": 15, "color": "yellow" },
              { "value": 30, "color": "green" }
            ]
          }
        }
      }
    ],
    "refresh": "10s",
    "schemaVersion": 36,
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }