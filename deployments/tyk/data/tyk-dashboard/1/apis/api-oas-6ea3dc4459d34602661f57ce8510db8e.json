{
  "components": {
    "securitySchemes": {
      "jwtAuth": {
        "bearerFormat": "JWT",
        "scheme": "bearer",
        "type": "http"
      }
    }
  },
  "info": {
    "title": "Streams - Simple PubSub Auth",
    "version": "1.0.0"
  },
  "openapi": "3.0.3",
  "paths": {},
  "security": [
    {
      "jwtAuth": []
    }
  ],
  "servers": [
    {
      "url": "http://tyk-gateway.localhost:8080/streams-authenticated-pubsub/"
    }
  ],
  "x-tyk-api-gateway": {
    "info": {
      "dbId": "66ffac5a2a4a51000186d373",
      "id": "6ea3dc4459d34602661f57ce8510db8e",
      "name": "Streams - Authenticated PubSub",
      "orgId": "5e9d9544a1dcd60001d0ed20",
      "state": {
        "active": true
      }
    },
    "middleware": {
      "global": {
        "contextVariables": {
          "enabled": true
        },
        "trafficLogs": {
          "enabled": true
        }
      }
    },
    "server": {
      "authentication": {
        "enabled": true,
        "securitySchemes": {
          "jwtAuth": {
            "enabled": true,
            "header": {
              "enabled": true,
              "name": "Authorization"
            },
            "identityBaseField": "sub",
            "policyFieldName": "pol",
            "signingMethod": "hmac",
            "source": "bXktc2VjcmV0"
          }
        }
      },
      "listenPath": {
        "strip": true,
        "value": "/streams-authenticated-pubsub/"
      }
    },
    "upstream": {
      "url": "http://httpbin/"
    }
  },
  "x-tyk-streaming": {
    "streams": {
      "Simple PubSub": {
        "input": {
          "http_server": {
            "allowed_verbs": [
              "POST"
            ],
            "path": "/pub",
            "timeout": "5s"
          }
        },
        "output": {
          "http_server": {
            "stream_path": "/sse",
            "ws_path": "/ws"
          }
        }
      }
    }
  }
}
