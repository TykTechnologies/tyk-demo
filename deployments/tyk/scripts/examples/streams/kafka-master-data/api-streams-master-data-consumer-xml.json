{
  "components": {},
  "info": {
    "title": "Streams Master Data - XML Consumer",
    "version": "1.0.0",
    "description": "Master Data XML Consumer API - Kafka to HTTP endpoint with JSON to XML transformation for downstream ERP systems requiring XML format"
  },
  "openapi": "3.0.3",
  "paths": {},
  "servers": [
    {
      "url": "http://tyk-gateway.localhost:8080/streams-master-data-xml/"
    }
  ],
  "x-tyk-api-gateway": {
    "info": {
      "id": "master-data-xml-consumer-api",
      "name": "Streams Master Data XML Consumer",
      "orgId": "5e9d9544a1dcd60001d0ed20",
      "state": {
        "active": true
      }
    },
    "server": {
      "listenPath": {
        "strip": true,
        "value": "/streams-master-data-xml/"
      }
    },
    "upstream": {
      "url": ""
    }
  },
  "x-tyk-streaming": {
    "streams": {
      "consumer": {
        "input": {
          "kafka": {
            "addresses": [
              "kafka:9092"
            ],
            "checkpoint_limit": 1,
            "client_id": "master-data-xml-consumer",
            "consumer_group": "xml-consumers",
            "target_version": "3.8.0",
            "topics": [
              "master-data-items"
            ]
          }
        },
        "output": {
          "http_server": {
            "stream_path": "/stream"
          }
        },
        "pipeline": {
          "processors": [
            {
              "bloblang": "root.items = this\nroot = root.format_xml()\n"
            }
          ]
        }
      }
    }
  }
}

