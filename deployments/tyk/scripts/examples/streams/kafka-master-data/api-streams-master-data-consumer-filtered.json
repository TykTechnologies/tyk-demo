{
  "components": {},
  "info": {
    "title": "Streams Master Data - Filtered Consumer",
    "version": "1.0.0",
    "description": "Master Data Filtered Consumer API - Kafka to HTTP endpoint with filtering logic for downstream ERP systems that only need a subset of master data"
  },
  "openapi": "3.0.3",
  "paths": {},
  "servers": [
    {
      "url": "http://tyk-gateway.localhost:8080/streams-master-data-filtered/"
    }
  ],
  "x-tyk-api-gateway": {
    "info": {
      "id": "master-data-filtered-consumer-api",
      "name": "Streams Master Data Filtered Consumer",
      "orgId": "5e9d9544a1dcd60001d0ed20",
      "state": {
        "active": true
      }
    },
    "server": {
      "listenPath": {
        "strip": true,
        "value": "/streams-master-data-filtered/"
      }
    },
    "upstream": {
      "url": ""
    }
  },
  "x-tyk-streaming": {
    "streams": {
      "consumer": {
        "input": {
          "kafka": {
            "addresses": [
              "kafka:9092"
            ],
            "checkpoint_limit": 1,
            "client_id": "master-data-filtered-consumer",
            "consumer_group": "filtered-consumers",
            "target_version": "3.8.0",
            "topics": [
              "master-data-items"
            ]
          }
        },
        "pipeline": {
          "processors": [
            {
              "bloblang": "root = if this.category.lowercase() == \"electronics\" {\n  this\n} else {\n  deleted()\n}\n"
            }
          ]
        },
        "output": {
          "http_server": {
            "stream_path": "/stream"
          }
        }
      }
    }
  }
}

