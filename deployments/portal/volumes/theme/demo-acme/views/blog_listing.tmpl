<div class="blog-page-wrapper">
  <header class="dark-to-light-bg">
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <div class="text-container">
            <h1>{{.blogSite.Title}}</h1>
            <p>{{.blogSite.Lede}}</p>
          </div>
        </div>
        <div class="col-sm-6 image-container" style="background: url('/assets/images/blog.svg') no-repeat left center;">
          {{.blocks.BackgroundImage.Image.URL}}</div>
      </div>
    </div>
  </header>
  <div class="container">
    <div class="row">
    {{ $length := len .posts }}
    {{ if eq $length 0 }}
      <div class="col-md-12 text-center mt-4">
        <div class="alert alert-info" role="alert">
          <i class="tyk-icon tykon tykon-warning "></i>
          <div class="alert__content">No blog posts to be shown.</div>
        </div>
      </div>
    {{ else }}
      <div class="col-md-12">
        <div class="row justify-content-center mt-4">
          {{ range $i, $val := .posts }}
              <div class="col-lg-4 card-container">
                <div class="card blog h-100 {{ if eq $val.HeaderImage.URL "" }}dark-background{{ end }}">
                  {{ if $val.HeaderImage.URL }}
                    <img class="card-image-border-card-view" src='{{$val.HeaderImage.URL "preview"}}'/>
                  {{ end }}
                  <div class="card-body d-flex flex-column justify-content-start p-4 mt-5 mr-5">
                    <p class="body-large-default mb-0"> {{.CreatedAt | date "2 Jan, 2006" }}</p>
                    <h2 class="card-title heading-xlarge d-flex flex-column justify-content-end mt-2">{{ $val.Title }}</h2>
                    <p class="text-uppercase">
                      {{ $val.Lede }}</p>
                  </div>
                  <p class="card-text blog__category align-self-center">
                    <span>
                      {{ range $idx, $category := $val.Categories }}
                        {{ $category.Name }}{{ if and (gt (len $val.Categories) 1) (lt $idx (add (len $val.Categories) -1)) }},{{end}}
                      {{ end }}
                    </span>
                  </p>
                  <div class="card-cta align-self-center">
                    <a href="{{$val.URL}}" class="btn btn-secondary">Keep reading</a>
                  </div>
                </div>
              </div>
          {{ end }}
        </div>
      </div>
    {{ end }}
    </div>
  </div>
</div>
