{{ $label := .label }}
{{ $description := .description }}
{{ $value := .value }}
{{ $showCopy := .showCopy }}
{{ $inputType := .inputType }}
{{ $isPending := .isPending }}
{{ $pendingMessage := .pendingMessage }}
{{ $showBorder := .showBorder }}

<div class="col-lg-12{{ if ne $showBorder false }} requests-row-section{{ end }}">
  <div class="d-flex flex-row justify-content-between align-items-center flex-wrap p-3 requests-row-section__info">
    <div class="d-flex flex-column pr-3">
      <h6 class="heading-small text-default mr-4 mb-1">{{ $label }}</h6>
      {{ if $description }}
        <span class="text-regular-14">{{ $description }}</span>
      {{ end }}
    </div>
    {{ if $isPending }}
      <div class="alert alert-info flex-grow-1" role="alert">
        <i class="tyk-icon tykon tykon-warning"></i>
        <div class="alert__content heading-small">{{ $pendingMessage }}</div>
      </div>
    {{ else }}
      <div class="d-flex flex-row justify-content-between text-regular-14">
        <input type="{{ $inputType }}" class="input-as-span content-field" value="{{ $value }}" disabled>
        {{ if $showCopy }}
          <i class="tyk-icon tykon tykon-copy" data-copy-value="{{ $value }}"></i>
        {{ end }}
      </div>
    {{ end }}
  </div>
</div>
